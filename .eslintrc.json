{
  "env": {
    "browser": true,
    "jquery": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script",
    "ecmaFeatures": {
      "globalReturn": false
    }
  },
  "rules": {
    "eqeqeq": "warn",
    "no-extra-semi": "error",
    "semi-spacing": ["error", {"before": false, "after": true}],
    "semi": ["error", "always"],
    "no-console": "warn",
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }]
  }
}
