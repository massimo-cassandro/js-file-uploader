    data-filetype="img"
    data-uploader_legend="true"
    data-uploader_legend_text="Sort images by dragging them"
    data-max_filesize="2MB"
    data-multiple="true"
    data-sortable="true"
    data-sortable_varname="img_order"
    data-img_max_w="2000"
    data-img_max_h="500"
