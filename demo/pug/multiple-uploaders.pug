extends tpl/tpl.pug
block variables
  - title = 'Multiple Uploaders in the same page'
block intro
  p Multiple uploaders in the same page, each of them
    |
    | with #[code multiple] and #[code sortable] parameter activated.
  p Only the first one contains an input tag.
  p Note the customizations of variables names to avoid data overlapping on server.

block fupl
  // first uploader
  div.file-uploader2(
    data-filetype="img"
    data-img_min_h="500"
    data-img_min_w="500"
    data-max_filesize="2500"
    data-uploader_legend="true"
    data-multiple="true"
    data-sortable="true"
    data-sortable_varname="upl1_img_order"
    data-varname="upl1"
    data-values= `[{
      "id": "123",
      "name": "fezbot2000-1511423-unsplash.jpg",
      "src": "test-files/fezbot2000-1511423-unsplash.jpg",
      "wi": 1067,
      "he": 1500,
      "size": 358840
    },
    {
      "id": "456",
      "name": "ibrahim-rifath-787485-unsplash.jpg",
      "src": "test-files/ibrahim-rifath-787485-unsplash.jpg",
      "wi": 1920,
      "he": 1280,
      "size": 193345
    }]`
  )
    label(for="input_file") This is the original input field label
    input#input_file(name="myfile" type="file")

  hr.my-4
  // second uploader
  div.file-uploader2(
    data-filetype="img"
    data-img_min_h="500"
    data-img_min_w="500"
    data-max_filesize="2500"
    data-uploader_legend="true"
    data-uploader_legend_text="Uploader without input field"
    data-multiple="true"
    data-sortable="true"
    data-sortable_varname="upl2_img_order"
    data-varname="upl2"
    data-values= `[{
      "id": "789",
      "name": "16-9-img-martha-dominguez-de-gouveia-747676-unsplash.jpg",
      "src": "test-files/16-9-img-martha-dominguez-de-gouveia-747676-unsplash.jpg",
      "wi": 1600,
      "he": 900,
      "size": 222121
    }]`
  )



block js
  script(src="./js/basic-demo.js" type="module")


