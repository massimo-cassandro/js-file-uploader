extends _tpl.pug
block variables
  - title = 'Mixed IMG/SVG demo'
block intro
  p.
    This Uploader allows to add both bitmap and svg files.
    Width and height constraints affect bitmap images only.
  p In addition, images can be sorted.

block fupl
  div(data-file-uploader
    data-filetype="img+svg"
    data-uploader_legend="true"
    data-uploader_legend_text="Mixed img/svg"
    data-max_filesize="2MB"
    data-multiple="true"
    data-sortable="true"
    data-sortable_varname="img_order"
    data-img_max_w="2000"
    data-img_max_h="500"
    data-values=`[
      {
        "id": "123",
        "name": "svg2.svg",
        "src": "test-files/svg2.svg",
        "wi": null,
        "he": null,
        "size": 306
      },
      {
        "id": "456",
        "name": "small_img.png",
        "src": "test-files/small_img.png",
        "wi": 300,
        "he": 300,
        "size": 7429
      }
    ]`
  )

block js
  script(src="./js/basic-demo.js" type="module")
